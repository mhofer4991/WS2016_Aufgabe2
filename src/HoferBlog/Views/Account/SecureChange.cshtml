@{
    Layout = "../Shared/_Layout.cshtml";
}

<h1>Account settings</h1>

@Html.ValidationSummary(true, "Errors:", new { @class = "alert alert-danger" })

@if (ViewBag.EmailChanged != null)
{
    <div class="alert alert-success" role="alert">
        <strong>Sucess!</strong> Email has been changed.
    </div>
}
else if (ViewBag.PasswordChanged != null)
{
    <div class="alert alert-success" role="alert">
        <strong>Sucess!</strong> Password has been changed.
    </div>
} 
@Html.Partial("ChangeEmail")
@Html.Partial("ChangePassword")