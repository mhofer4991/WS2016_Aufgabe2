@{
    Layout = "../Shared/_Layout.cshtml";
}
@model HoferBlog.ViewModels.ExternalLoginConfirmationVM
<h1>Confirm your login</h1>

@Html.ValidationSummary(true, "Errors:", new { @class = "alert alert-danger" })

<form method="post" action="/account/externalloginconfirmation">
    @Html.AntiForgeryToken()

    <div class="form-group row">
        @Html.LabelFor(i => i.Username, new { @class = "col-sm-2 col-form-label required" })

        <div class="col-sm-10">
            @Html.TextBoxFor(i => i.Username, new { @readonly = "readonly", @class = "form-control" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(i => i.Email, new { @class = "col-sm-2 col-form-label required" })

        <div class="col-sm-10">
            @Html.TextBoxFor(i => i.Email, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(i => i.Description, new { @class = "col-sm-2 col-form-label required" })

        <div class="col-sm-10">
            @Html.TextAreaFor(i => i.Description, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(i => i.Password, new { @class = "col-sm-2 col-form-label required" })

        <div class="col-sm-10 col-form-label">
            @Html.PasswordFor(i => i.Password, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(i => i.ConfirmPassword, new { @class = "col-sm-2 col-form-label required" })

        <div class="col-sm-10 col-form-label">
            @Html.PasswordFor(i => i.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-10">
            <input class="btn btn-primary" type="submit" value="Confirm" />
        </div>
    </div>
</form>