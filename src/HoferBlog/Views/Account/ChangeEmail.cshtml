@{
}
@model HoferBlog.ViewModels.ChangeEmailVM

<form method="post" action="/account/changeemail">
    @Html.AntiForgeryToken()

    <div class="form-group row">
        @Html.LabelFor(i => i.Password, new { @class = "col-sm-2 col-form-label required" })

        <div class="col-sm-10">
            @Html.PasswordFor(i => i.Password, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(i => i.NewEmail, new { @class = "col-sm-2 col-form-label required" })

        <div class="col-sm-10">
            @Html.TextBoxFor(i => i.NewEmail, new { type="email", @class = "form-control" })
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-10">
            <input class="btn btn-primary" type="submit" value="Change email" />
        </div>
    </div>

</form>