@{
}
@model HoferBlog.ViewModels.ChangePasswordVM
<form method="post" action="/account/changepassword">
    @Html.AntiForgeryToken()

    <div class="form-group row">
        @Html.LabelFor(i => i.Password, new { @class = "col-sm-2 col-form-label required" })

        <div class="col-sm-10">
            @Html.PasswordFor(i => i.Password, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(i => i.NewPassword, new { @class = "col-sm-2 col-form-label required" })

        <div class="col-sm-10">
            @Html.PasswordFor(i => i.NewPassword, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(i => i.ConfirmNewPassword, new { @class = "col-sm-2 col-form-label required" })

        <div class="col-sm-10">
            @Html.PasswordFor(i => i.ConfirmNewPassword, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-10">
            <input class="btn btn-primary" type="submit" value="Change password" />
        </div>
    </div>


</form>