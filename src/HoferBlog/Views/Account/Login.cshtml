@model HoferBlog.ViewModels.LoginVM
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "../Shared/_Layout.cshtml";
}

<h2>Login</h2>

@Html.ValidationSummary(true, "Errors:", new { @class = "alert alert-danger" })

<form method="post" action="/account/login">
    @Html.AntiForgeryToken()

    <div class="form-group row">
        @Html.LabelFor(i => i.Username, new { @class = "col-sm-2 col-form-label required" })

        <div class="col-sm-10">
            @Html.TextBoxFor(i => i.Username, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(i => i.Password, new { @class = "col-sm-2 col-form-label required" })

        <div class="col-sm-10">
            @Html.PasswordFor(i => i.Password, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(i => i.RememberMe, new { @class = "col-sm-2 col-form-label required" })

        <div class="col-sm-10 col-form-label">
            @Html.CheckBoxFor(i => i.RememberMe, new { @class = "" })
        </div>
    </div>


    <div class="form-group row">
        <div class="offset-sm-2 col-sm-10">
            <input class="btn btn-primary" type="submit" value="Login" />
        </div>
    </div>
</form>

<a href="/account/external?provider=Google">Sign in with Google</a>