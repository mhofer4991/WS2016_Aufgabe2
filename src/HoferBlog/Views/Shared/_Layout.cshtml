@using Microsoft.AspNetCore.Identity
@using BlogStorage.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/tether/dist/css/tether.css" rel="stylesheet" />
    <link href="~/app/css/quill.snow.css" rel="stylesheet" />
    <link href="~/app/css/quill.bubble.css" rel="stylesheet" />
    <link href="~/app/css/style.css" rel="stylesheet" />
</head>
<body ng-app="myApp" ng-controller="MainController">
    <nav class="navbar navbar-light bg-faded">
        <button class="navbar-toggler hidden-lg-up" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation"></button>
        <div class="collapse navbar-toggleable-md" id="navbarResponsive">
            <div class="container">
                <a class="navbar-brand" href="/#!/">Blog</a>
                <form class="form-inline float-lg-left" method="get" action="{{'/#!/search/' + searchTerm}}">
                    <input class="form-control" type="text" ng-model="searchTerm" placeholder="Search">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                </form>
                 <a class="btn btn-outline-success" href="/#!/archive/">Archive</a>
                <div class="form-inline float-lg-right">
                    @if (User.Identity.IsAuthenticated /*SignInManager.IsSignedIn(User)*/ /* string.IsNullOrWhiteSpace(User.Identity.Name)*/)
                    {
                        <ul class="nav navbar-nav">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="http://example.com" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    @User.Identity.Name
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                    <a class="dropdown-item" href="/#!/users/@User.Identity.Name">Profile</a>
                                    <a class="dropdown-item" href="/#!/blogs/add">Create blog</a>
                                    <a class="dropdown-item" href="/account/securechange">Account settings</a>
                                    <a class="dropdown-item" href="/account/logout">Logout</a>
                                </div>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <a class="btn btn-outline-primary" href="/account/login" role="button">Login</a>
                        <a class="btn btn-outline-primary" href="/account/register" role="button">Register</a>
                    }
                </div>
            </div>
        </div>
    </nav>
    <div class="container">
        <br />
        @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/tether/dist/js/tether.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/angular/angular.min.js"></script>
    <script src="~/app/lib/angular-resource.js"></script>
    <script src="~/app/lib/angular-route.js"></script>
    <script src="~/app/lib/quill.js"></script>
    <script src="~/lib/ngquill/src/ng-quill.js"></script>
    <script src="~/app/scripts/app.js"></script>
    <script src="~/app/scripts/factories/UserFactory.js"></script>
    <script src="~/app/scripts/factories/BlogFactory.js"></script>
    <script src="~/app/scripts/factories/PostFactory.js"></script>
    <script src="~/app/scripts/controllers/MainController.js"></script>
    <script src="~/app/scripts/controllers/OverviewController.js"></script>
    <script src="~/app/scripts/controllers/ArchiveController.js"></script>
    <script src="~/app/scripts/controllers/AlertController.js"></script>
    <script src="~/app/scripts/controllers/PostController.js"></script>
    <script src="~/app/scripts/controllers/PageController.js"></script>
    <script src="~/app/scripts/controllers/UserController.js"></script>
    <script src="~/app/scripts/controllers/BlogController.js"></script>
    <script src="~/app/scripts/routes.js"></script>
    @section Scripts
    {

    }
</body>
</html>
